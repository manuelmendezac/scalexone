{
  "build": {
    "env": {
      "TSC_COMPILE_ON_ERROR": "true"
    }
  },
  "rewrites": [
    {
      "source": "/((?!api/|_next/|.*\\..*).*)",
      "destination": "/"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "functions": {
    "api/*.ts": {
      "runtime": "vercel-node@4.0.0"
    }
  }
} 